<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:descendantFocusability="beforeDescendants" >

    <RelativeLayout
        android:id="@+id/rel_casting_registration"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true" >

        <RelativeLayout
            android:id="@+id/casting_registration_top_bar"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@drawable/top_bar"
            android:visibility="visible" >


            <LinearLayout
                android:id="@+id/casting_registration_back_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_alignParentStart="true">

                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:padding="5dp"
                    android:background="@drawable/back_icon"
                    android:visibility="visible" />

                <com.sdi.castivate.fonts.ProximaNovaRegular
                    android:id="@+id/casting_registration_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="@string/back"
                    android:textColor="@android:color/white"
                    android:textSize="26sp"
                    android:visibility="visible" />


            </LinearLayout>

            <com.sdi.castivate.fonts.RockWell
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/castivity"
                android:textColor="@android:color/white"
                android:textSize="36sp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />


            <com.sdi.castivate.fonts.ProximaNovaRegular
                android:id="@+id/casting_registration_signin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="@string/txt_signin"
                android:textColor="@android:color/white"
                android:textSize="26sp"
                android:visibility="visible"
                android:layout_marginEnd="24dp"
                android:layout_alignTop="@+id/casting_registration_back_icon"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>


        <LinearLayout
            android:layout_below="@+id/casting_registration_top_bar"
            android:id="@+id/ll_castivate_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <com.sdi.castivate.fonts.ProximanovaCondSemiBold
                android:id="@+id/txt_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/txt_details"
                android:layout_marginTop="15dp"
                android:textColor="#171717"
                android:padding="20dp"
                android:textSize="24sp"
                android:textStyle="bold"
                />


            <com.sdi.castivate.fonts.ProximaNovaLightEditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="200sp"
                android:layout_marginRight="40sp"
                android:padding="15dp"
                android:layout_marginTop="30sp"
                android:background="@color/transparent"
                android:hint="@string/et_name"
                android:singleLine="true" />

            <com.sdi.castivate.fonts.ProximaNovaLightEditText
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="200sp"
                android:layout_marginRight="40sp"
                android:padding="15dp"
                android:layout_marginTop="15sp"
                android:background="@color/transparent"
                android:hint="@string/et_email"
                android:singleLine="true" />

            <com.sdi.castivate.fonts.ProximaNovaLightEditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="200sp"
                android:layout_marginRight="40sp"
                android:padding="15dp"
                android:layout_marginTop="15dp"
                android:background="@color/transparent"
                android:hint="@string/et_pass"
                android:inputType="textPassword"
                android:maxLength="20"
                android:singleLine="true" />

            <com.sdi.castivate.fonts.ProximaNovaLightEditText
                android:id="@+id/et_cardNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="200sp"
                android:layout_marginRight="40sp"
                android:layout_marginTop="15dp"
                android:padding="15dp"
                android:maxLength="19"
                android:background="@color/transparent"
                android:inputType="phone"
                android:hint="@string/et_cardno"
                android:singleLine="true" />

            <com.sdi.castivate.fonts.ProximaNovaLightTextView
                android:id="@+id/et_monthYear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="200sp"
                android:layout_marginRight="40sp"
                android:layout_marginTop="15dp"
                android:padding="15dp"
                android:background="@color/transparent"
                android:hint="@string/et_date"
                android:textColor="@color/dark_black"
                android:textSize="18sp"
                android:singleLine="true" />

            <com.sdi.castivate.fonts.ProximaNovaLightEditText
                android:id="@+id/et_cvv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="200sp"
                android:layout_marginRight="40sp"
                android:layout_marginTop="15dp"
                android:padding="15dp"
                android:background="@color/transparent"
                android:hint="@string/et_cv"
                android:maxLength="4"
                android:inputType="number"
                android:singleLine="true" />

            <com.sdi.castivate.fonts.ProximaNovaLightEditText
                android:id="@+id/zipcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="200sp"
                android:layout_marginRight="40sp"
                android:layout_marginTop="15dp"
                android:padding="15dp"
                android:background="@color/transparent"
                android:hint="@string/zipcode"
                android:maxLength="5"
                android:inputType="number"
                android:singleLine="true" />

            <com.sdi.castivate.fonts.ProximaNovaRegularButton
                android:id="@+id/btn_submit"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/btn_signin"
                android:layout_marginTop="80dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:padding="10dp"
                android:gravity="center"
                android:textAllCaps="false"
                android:textColorHint="#FFFFFF"
                android:textSize="25sp"
                android:hint="@string/btn_submit" />

            <!--style="@style/btn_signin"-->

        </LinearLayout>


    </RelativeLayout>

</RelativeLayout>